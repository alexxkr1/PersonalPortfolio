@model Portfolio.Core.Domain.PostViewModel
<link href="~/lib/trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
@*<a href="~/lib/trumbowyg-main/dist/ui/trumbowyg.min.css.map">~/lib/trumbowyg-main/dist/ui/trumbowyg.min.css.map</a>*@
<div>
    <form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>Category</label>
            <input asp-for="Category" />
            <select asp-for="Category">
                <option></option>
            </select>
        </div>
        <div>
            <label>Body</label>
            <textarea id="editor" asp-for="body"></textarea>
        </div>
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden"/>
            <input asp-for="Image" />
        </div>
        <input type="submit" value="Submit"/>
    </form>
</div>

@section EditScripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/trumbowyg-main/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();

        // . - class
        // # - id
        // nav - html element
    </script>
}